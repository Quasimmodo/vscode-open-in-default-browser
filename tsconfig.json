{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist/__out__",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true
  },
  "include": [
    "src",
    "test",
    "i18n",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
