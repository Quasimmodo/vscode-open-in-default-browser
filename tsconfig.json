{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist/__out__",
    "noImplicitAny": true,
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
