{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "rootDirs": [
      "src",
      "test",
      "i18n"
    ]
  },
  "include": [
    "src",
    "test",
    "i18n",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
